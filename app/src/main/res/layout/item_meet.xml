<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pet_owner_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:clickable="false"/>

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pet_owner_image"
        android:layout_marginTop="23dp"
        tools:text="Julia Trut"
        android:layout_alignRight="@+id/pet_owner_image"
        android:layout_alignEnd="@+id/pet_owner_image"
        android:layout_alignLeft="@+id/pet_owner_image"
        android:layout_alignStart="@+id/pet_owner_image"
        android:clickable="false"/>

    <TextView
        android:id="@+id/start_meet_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/pet_owner_image"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        tools:text="17:00"
        android:clickable="false"/>

    <Button
        android:id="@+id/go_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:layout_alignBottom="@+id/user_name_tv"
        android:layout_alignRight="@+id/start_meet_time_tv"
        android:layout_alignEnd="@+id/start_meet_time_tv"
        />


</RelativeLayout>